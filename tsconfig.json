{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,

    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.vue"]
  }
  